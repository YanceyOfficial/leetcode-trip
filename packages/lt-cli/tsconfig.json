{
  "compilerOptions": {
    "module": "nodenext",
    "declaration": true,
    "declarationDir": "./lib/types",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./lib",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "incremental": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib/**/*"]
}
